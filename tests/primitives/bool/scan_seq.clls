proc main() {
    cut {
        send ch(x. scan(x));
        send ch(y. scan(y));
        send ch(z. scan(z));
        close ch
        |ch: ~send lbool; send lbool; send lbool; close|
        recv ch(x); println(x);
        recv ch(y); println(y);
        recv ch(z); println(z);
        wait ch; ()
    }
};;
